<div class="productContainer">
    {{#each products }}
    <div class="col-lg-3 col-md-4 col-sm-6 product featured__item">
        <div class="product-under">
       
                    <div class="featured__item__pic pictureBorder">
                        <img class="imageStyle" src="{{this.thumbnail}}" />
                        <ul class="featured__item__pic__hover product-over">
                            <li><a href="#"><i class="fa fa-heart"></i></a></li>
                            <li><a href="#"><i class="fa fa-retweet"></i></a></li>
                            <li><a href="#/"><i class="fa fa-shopping-cart addToCart" data-product-id={{this.id}} onclick="myFunction()"></i></a></li>
                        </ul>
                    </div>
                    <div class="featured__item__text product-summary">
                        <h6 class="tituloCard productName">{{this.name}}</h6>
                        <h5 ><span class="priceValue">{{this.price}}</span></h5>
                    </div>
                
</div>
    </div>


{{/each}}

</div>




